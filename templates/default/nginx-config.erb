#
# nginx proxy for devpi-server
#

upstream devpi {
	server 127.0.0.1:<%= node[:devpiserver][:server_port] %>;
}

server {
	server_name <%= node.fqdn %>;
	access_log <%= node[:devpiserver][:log_directory] %>/nginx-access;
	error_log <%= node[:devpiserver][:log_directory] %>/nginx-errors;
	client_max_body_size 0;
	
	location / {
		proxy_pass http://devpi;
		proxy_redirect off;
		proxy_buffering off;
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	}
}

